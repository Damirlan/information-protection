<Page x:Class="Encryption.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Encryption"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid x:Name="MainWin" Background="#f7f8fb">
        <Grid.RowDefinitions>

            <RowDefinition />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="250"/>
            <ColumnDefinition  Width="250"/>
            <ColumnDefinition  Width="250"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row ="0" FontSize="29" Content="Выберите шифрование" HorizontalAlignment="Center" VerticalAlignment="Center" Height="115" Width="335" Margin="216,35,202,0" Grid.ColumnSpan="3"/>

        <ComboBox Name="methodList" Grid.Row ="1" Grid.Column="1" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" SelectionChanged="ComboBox_Selected">
            <TextBlock>Магические квадраты</TextBlock>
            <TextBlock>Полибианский квадрат</TextBlock>
            <TextBlock>Шифр Гронсфельда</TextBlock>
        </ComboBox>
    </Grid>
</Page>
